---
interface Props {
  tagline?: string;
  heading: string;
  subheading?: string;
  alignment?: "left" | "center";
  className?: string;
}

const { 
  tagline, 
  heading, 
  subheading, 
  alignment = "center",
  className = ""
} = Astro.props;
---

<div 
  class:list={[
    "flex flex-col gap-3",
    alignment === "center" ? "text-center" : "text-left",
    className
  ]}
  data-aos="fade-up-sm"
>
  {tagline && (
    <div class={`flex ${alignment === "center" ? "justify-center" : "justify-start"}`}>
      <span class="inline-block px-3 py-1.5 bg-gradient-to-r from-blue-500/10 to-purple-500/10 border border-blue-500/20 rounded-full text-blue-600 text-xs sm:text-sm font-medium mb-4">
        {tagline}
      </span>
    </div>
  )}
  <h2 class="text-2xl sm:text-[32px] lg:text-[42px] font-medium mb-4" set:html={heading} />
  {subheading && (
    <p class="text-base sm:text-lg text-gray-600 max-w-3xl mx-auto">
      {subheading}
    </p>
  )}
</div> 