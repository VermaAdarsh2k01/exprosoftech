    ---
import DynamicIcon from "@/helpers/DynamicIcon";
import type { Button } from "@/types";
---

<section class="section relative z-[1] pt-8 pb-16 lg:pt-12 lg:pb-24">
  <div class="max-w-[85rem] mx-auto px-3">
    <div class="row items-center justify-between">
      {/* Left Column - Content */}
      <div class="mb-8 lg:mb-0 text-center lg:text-left lg:col-6" data-aos="fade-up-sm">
        <h1 
          class="mb-4 text-h3 lg:text-h1 gradient-text"
        >
        Empower Your Sales Team, Boost Field Efficiency, and Drive Growth
        </h1>
        <p 
          class="mb-8 text-lg/[inherit] text-text"
        >
        Fieldkonnect equips your sales team with the tools to boost productivity, focus, and customer experience. Designed to streamline field activities and enable data-driven decisions, it helps companies unlock their full sales potential.
        </p>
        <div class="flex flex-wrap lg:justify-start justify-center gap-4">
          <a
            href="#features"
            class="btn btn-primary"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          >
            See How It Works
            <span class="sr-only">Details</span>
            <span class="icon-wrapper">
              <span class="icon">
                <DynamicIcon icon={"FaArrowRight"} />
              </span>
            </span>
          </a>
        </div>
      </div>

      {/* Right Column - Image */}
      <div class="lg:col-6" data-aos="fade-up-sm" data-aos-delay="400">
        <div class="relative">
          <img
            src="/images/sfa.png"
            alt="Loyalty Engine Dashboard"
            class="w-full h-auto rounded-lg object-cover p-4"
            width={580}
            height={480}
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .gradient-text {
    @apply bg-gradient-to-r from-[#111b57] to-primary bg-clip-text text-transparent font-medium;
  }
</style>
