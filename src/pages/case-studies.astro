---
import Base from "@/layouts/Base.astro";
import CaseStudiesComponent from "../components/CaseStudies";
import { sanityClient } from "sanity:client";

// Interface for case study data from Sanity
interface CaseStudyData {
  _id: string;
  title: string;
  category: string;
  description: string;
  logo: {
    asset: {
      url: string;
    };
    alt: string;
  };
  backgroundImage: {
    asset: {
      url: string;
    };
    alt: string;
  };
  order: number;
}

// Fetch case studies data from Sanity
const caseStudiesData = await sanityClient.fetch(`
  *[_type == "caseStudy"] | order(order asc) {
    _id,
    title,
    category,
    description,
    logo {
      asset->{
        url
      },
      alt
    },
    backgroundImage {
      asset->{
        url
      },
      alt
    },
    order
  }
`);

// Transform the data to match the expected format in CaseStudies component
const transformedCaseStudies = caseStudiesData.map((study: CaseStudyData) => ({
  category: study.category,
  title: study.title,
  description: study.description,
  logo: study.logo.asset.url,
  src: study.backgroundImage.asset.url
}));

// Page metadata
const pageTitle = "Case Studies";
const pageDescription = "Discover how we've helped organizations achieve remarkable transformations and measurable outcomes through our comprehensive solutions.";
---

<Base 
  title={pageTitle} 
  meta_title={`${pageTitle} - Greymetre`} 
  description={pageDescription}
>
  <main class="min-h-screen">
    <!-- Page Header Section -->
    <section class="py-16 lg:py-24 bg-gradient-to-br from-slate-50 to-blue-50/30">
      <div class="max-w-[85rem] mx-auto px-4 md:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
            Success Stories That Drive 
            <span class="text-[#0066FF]">Real Results</span>
          </h1>
          <p class="text-lg lg:text-xl text-gray-600 leading-relaxed">
            Explore our portfolio of successful transformations across industries. 
            See how we've helped organizations overcome challenges and achieve 
            measurable business outcomes.
          </p>
        </div>
      </div>
    </section>

    <!-- Case Studies Component -->
    {transformedCaseStudies.length > 0 ? (
      <CaseStudiesComponent client:load caseStudies={transformedCaseStudies} />
    ) : (
      <!-- Fallback content when no case studies are available -->
    <section class="py-20">
        <div class="max-w-4xl mx-auto px-4 text-center">
          <div class="bg-gray-50 rounded-2xl p-12">
            <div class="w-24 h-24 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-12 h-12 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Case Studies Coming Soon</h2>
            <p class="text-gray-600 leading-relaxed">
              We're currently preparing our comprehensive case studies to showcase 
              the remarkable transformations we've delivered. Check back soon to 
              see detailed success stories from our clients.
            </p>
          </div>
        </div>
      </section>
    )}

    
  </main>
</Base>
