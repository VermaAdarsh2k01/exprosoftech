---
import Base from "@/layouts/Base.astro";
import Clients from "@/partials/Clients.astro";
import { LoyaltyBanner } from "@/layouts/components/loyalty/LoyaltyBanner";
import { LoyaltyFeatures } from "@/layouts/components/loyalty/LoyaltyFeatures";
import { LoyaltyServices } from "@/layouts/components/loyalty/LoyaltyServices";
import { LoyaltyBenefits } from "@/layouts/components/loyalty/LoyaltyBenefits";
import { LoyaltyProcess } from "@/layouts/components/loyalty/LoyaltyProcess";
import { LoyaltyIndustries } from "@/layouts/components/loyalty/LoyaltyIndustries";
import ConsultationCTA from "../../../components/ConsultationCTA";
import FAQ from "../../../components/FAQ";

const title = "Loyalty Management Services";
const meta_title = "Loyalty Management Services | Greymetre";
const description =
  "End-to-end loyalty program management services to drive customer retention and engagement. Transform your customer relationships with our expertise.";
const image = "/images/services/loyalty-management/hero.png";
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <LoyaltyBanner client:load />
  <Clients />
  <LoyaltyFeatures client:load />
  <LoyaltyServices client:load />
  <LoyaltyBenefits client:load />
  <LoyaltyProcess client:load />
  <LoyaltyIndustries client:load />
  <!-- <ConsultationCTA client:load /> -->
  <FAQ client:load variant="home" />
</Base>
